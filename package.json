{
  "name": "clipforge",
  "version": "1.0.0",
  "description": "Streamlined desktop video editor",
  "main": "dist-electron/main/index.js",
  "author": "ClipForge Team",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "vite build && electron-builder",
    "build:dir": "vite build && electron-builder --dir",
    "build:mac": "vite build && electron-builder --mac",
    "build:win": "vite build && electron-builder --win",
    "preview": "vite preview",
    "lint": "eslint src --ext .js,.vue",
    "format": "prettier --write \"src/**/*.{js,vue,json}\"",
    "electron:dev": "vite"
  },
  "dependencies": {
    "electron": "^28.0.0",
    "vue": "^3.4.0",
    "pinia": "^2.1.0",
    "fluent-ffmpeg": "^2.1.2",
    "ffmpeg-static": "^5.2.0",
    "ffprobe-static": "^3.1.0",
    "electron-squirrel-startup": "^1.0.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.5.0",
    "vite": "^5.0.0",
    "vite-plugin-electron": "^0.14.0",
    "vite-plugin-electron-renderer": "^0.14.0",
    "electron-builder": "^24.6.0",
    "eslint": "^8.55.0",
    "eslint-plugin-vue": "^9.19.0",
    "prettier": "^3.1.0",
    "concurrently": "^8.2.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.clipforge.app",
    "productName": "ClipForge",
    "directories": {
      "output": "dist-build",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "!node_modules",
      {
        "from": "node_modules/ffmpeg-static",
        "to": "resources/ffmpeg-static",
        "filter": ["**/*"]
      },
      {
        "from": "node_modules/ffprobe-static",
        "to": "resources/ffprobe-static",
        "filter": ["**/*"]
      }
    ],
    "asarUnpack": [
      "resources/**/*"
    ],
    "mac": {
      "category": "public.app-category.video",
      "target": ["dmg", "zip"],
      "icon": "build/icon.icns"
    },
    "win": {
      "target": ["nsis", "portable"],
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Video"
    }
  }
}
