{
  "name": "forge",
  "version": "1.0.0",
  "description": "ClipForge and AudioForge - Separate video and audio editing applications",
  "main": "dist-electron/main/index.js",
  "author": "Forge Team",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "vite build && electron-builder",
    "build:dir": "vite build && electron-builder --dir",
    "build:mac": "vite build && electron-builder --mac",
    "build:win": "vite build && electron-builder --win",
    "build:mac:unsigned": "vite build && electron-builder --mac --config.mac.identity=null",
    "clean": "rm -rf dist dist-electron dist-build",
    "preview": "vite preview",
    "lint": "eslint src --ext .js,.vue",
    "format": "prettier --write \"src/**/*.{js,vue,json}\"",
    "electron:dev": "vite"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "electron-squirrel-startup": "^1.0.0",
    "ffmpeg-static": "^5.2.0",
    "ffprobe-static": "^3.1.0",
    "fluent-ffmpeg": "^2.1.2",
    "lz-string": "^1.5.0",
    "openai": "^6.7.0",
    "pinia": "^2.1.0",
    "vue": "^3.4.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.5.0",
    "concurrently": "^8.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.6.0",
    "eslint": "^8.55.0",
    "eslint-plugin-vue": "^9.19.0",
    "prettier": "^3.1.0",
    "sass-embedded": "^1.93.2",
    "vite": "^5.0.0",
    "vite-plugin-electron": "^0.14.0",
    "vite-plugin-electron-renderer": "^0.14.0",
    "vue-tsc": "^3.1.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.forge.app",
    "productName": "Forge",
    "directories": {
      "output": "dist-build",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "!node_modules",
      {
        "from": "node_modules/ffmpeg-static",
        "to": "resources/ffmpeg-static",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "node_modules/ffprobe-static",
        "to": "resources/ffprobe-static",
        "filter": [
          "**/*"
        ]
      }
    ],
    "asarUnpack": [
      "resources/**/*",
      "node_modules/ffmpeg-static/**/*",
      "node_modules/ffprobe-static/**/*"
    ],
    "extraResources": [
      {
        "from": "node_modules/ffmpeg-static",
        "to": "ffmpeg-static",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "node_modules/ffprobe-static",
        "to": "ffprobe-static",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.video",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon.icns",
      "identity": null,
      "gatekeeperAssess": false,
      "hardenedRuntime": false
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Video"
    }
  }
}
